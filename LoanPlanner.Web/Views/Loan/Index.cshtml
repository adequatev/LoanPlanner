@model LoanPlanner.Core.Models.LoanInput
@{
    ViewData["Title"] = "Loan Calculator";
}

<!DOCTYPE html>
<html>
<head>
    <title>Loan Calculator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h2>Калькулятор для аннуитетных займов</h2>
        <form asp-action="Calculate" method="post" id="loanForm">
            <div class="mb-3">
                <label asp-for="Amount" class="form-label">Сумма займа (руб.)</label>
                <input asp-for="Amount" name="Amount" class="form-control" type="number" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Term" class="form-label">Срок займа (мес.)</label>
                <input asp-for="Term" name="Term" class="form-control" type="number" />
                <span asp-validation-for="Term" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="InterestRate" class="form-label">Ставка (% в год)</label>
                <input asp-for="InterestRate" name="InterestRate" class="form-control" type="number" />
                <span asp-validation-for="InterestRate" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Рассчитать</button>
            <a asp-controller="DailyLoan" asp-action="Index" class="btn btn-secondary">daily loans</a>
        </form>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/additional-methods.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#loanForm").validate({
                rules: {
                    Amount: {
                        required: true,
                        number: true,
                        min: 1000,
                        max: 10000000
                    },
                    Term: {
                        required: true,
                        number: true,
                        min: 1,
                        max: 420
                    },
                    InterestRate: {
                        required: true,
                        number: true,
                        min: 0.1,
                        max: 100
                    }
                },
                messages: {
                    Amount: {
                        required: "Пожалуйста, введите сумму займа.",
                        number: "Некорректное число",
                        min: "Минимальная сумма займа - 1000 руб.",
                        max: "Максимальная сумма займа - 10,000,000 руб."
                    },
                    Term: {
                        required: "Введите срок займа",
                        number: "Некорректное число",
                        min: "Минимальный срок займа - 1 мес.",
                        max: "Максимальный срок займа - 420"
                    },
                    InterestRate: {
                        required: "Введите ставку в год",
                        number: "Некорректное число",
                        min: "Минимум - 0.1%",
                        max: "Максимум - 100%"
                    }
                }
            });
        });
    </script>
</body>
</html>