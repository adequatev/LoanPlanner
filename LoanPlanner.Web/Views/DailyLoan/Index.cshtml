@model LoanPlanner.Core.Models.DailyLoanInput
@{
    ViewData["Title"] = "Daily Loan Calculator";
}

<!DOCTYPE html>
<html>
<head>
    <title>Daily Loan Calculator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h2>Daily Loan Calculator</h2>
        <form asp-action="Calculate" asp-controller="DailyLoan" method="post" id="dailyLoanForm">
            <div class="mb-3">
                <label asp-for="Amount" class="form-label">Сумма займа</label>
                <input asp-for="Amount" name="Amount" class="form-control" type="number"/>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Term" class="form-label">Срок займа в днях</label>
                <input asp-for="Term" name="Term" class="form-control" type="number" />
                <span asp-validation-for="Term" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="InterestRate" class="form-label">Ставка в день (%)</label>
                <input asp-for="InterestRate" name="InterestRate" class="form-control" type="number" />
                <span asp-validation-for="InterestRate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PaymentStep" class="form-label">Шаг платежа в днях</label>
                <input asp-for="PaymentStep" name="PaymentStep" class="form-control" type="number" />
                <span asp-validation-for="PaymentStep" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Calculate</button>
            <a asp-controller="Loan" asp-action="Index" class="btn btn-secondary">monthly loans</a>
        </form>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/additional-methods.min.js"></script>
    <script>
        $(document).ready(function () {
            const INVALID = "Некорректное число";
            $("#dailyLoanForm").validate({
                rules: {
                    Amount: {
                        required: true,
                        number: true,
                        min: 1000,
                        max: 5000000
                    },
                    Term: {
                        required: true,
                        number: true,
                        min: 1,
                        max: 730
                    },
                    InterestRate: {
                        required: true,
                        number: true,
                        min: 0.0001,
                        max: 5
                    },
                    PaymentStep: {
                        required: true,
                        number: true,
                        min: 1,
                        max: 183
                    }
                },
                messages: {
                    Amount: {
                        required: "Пожалуйста, введите сумму займа.",
                        number: `${INVALID}`,
                        min: `Минимальная сумма займа - 1000 руб.`,
                        max: "Максимальная сумма займа - 5,000,000 руб."
                    },
                    Term: {
                        required: "Введите срок займа",
                        number: `${INVALID}`,
                        min: "Минимальный срок займа - 1 день.",
                        max: "Максимальный срок займа 730 дней."
                    },
                    InterestRate: {
                        required: "Введите дневную ставку",
                        number: `${INVALID}`,
                        min: "Минимальная ставка - 0.0001%.",
                        max: `Максимальная ставка - 5%`
                    },
                    PaymentStep: {
                        required: "Введите шаг платежа.",
                        number: `${INVALID}`,
                        min: "Минимальный шаг - 1 день.",
                        max: "Максимальный шаг - 183 дня."
                    }
                }
            });
        });
    </script>
</body>
</html>