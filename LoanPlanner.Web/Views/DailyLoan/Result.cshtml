@model LoanPlanner.Core.Models.DailyLoanInput
@{
    ViewData["Title"] = "Daily Loan Calculation Result";
    var schedule = ViewBag.Schedule as List<LoanPlanner.Core.Models.DailyPaymentSchedule>;
}

<!DOCTYPE html>
<html>
<head>
    <title>Daily Loan Calculation Result</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2>Daily Loan Calculation Result</h2>
        <p><strong>Сумма займа:</strong> @Model.Amount</p>
        <p><strong>Срок займа:</strong> @Model.Term</p>
        <p><strong>Ставка:</strong> @Model.InterestRate%</p>
        <p><strong>Шаг платежа:</strong> @Model.PaymentStep</p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Номер платежа</th>
                    <th>День</th>
                    <th>Сумма платежа</th>
                    <th>Размер платежа по телу</th>
                    <th>Размер платежа по %</th>
                    <th>Остаток основного долга</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var payment in schedule)
                {
                    <tr>
                        <td>@payment.PaymentNumber</td>
                        <td>@payment.Day</td>
                        <td>@payment.Payment</td>
                        <td>@payment.Principal</td>
                        <td>@payment.Interest</td>
                        <td>@payment.Balance</td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Index" asp-controller="DailyLoan" class="btn btn-secondary">Back to Calculator</a>
        <a asp-action="Index" asp-controller="Loan" class="btn btn-secondary">Go to Monthly Calculator</a>
    </div>
</body>
</html>